{
	"arrowParens": "always",
	"bracketSpacing": true,
	"endOfLine": "auto",
	"overrides": [
		{
			"files": ["*.html"],
			"options": {
				"htmlWhitespaceSensitivity": "ignore",
				"jsxBracketSameLine": true
			}
		},
		{
			"files": ["*.ts"],
			"options": {
				"singleQuote": false
			}
		},
		{
			"files": ["*.md"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	],
	"printWidth": 110,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "none",
	"useTabs": true
}
